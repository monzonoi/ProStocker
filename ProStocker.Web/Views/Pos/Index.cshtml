@model ProStocker.Web.Models.Venta
@{
    ViewData["Title"] = "Punto de Venta";
}
<div class="row">
    <div class="col-12">
        <h2>Punto de Venta</h2>
        <p>Sucursal: @ViewBag.SucursalId | Caja: @ViewBag.CajaId | Turno: @ViewBag.TurnoId</p>
    </div>
</div>
<div class="row">
    <div class="col-4">
        <input id="codigo" class="form-control" placeholder="Código de barras" autofocus />
    </div>
    <div class="col-8">
        <table class="table" id="carrito">
            <thead>
                <tr><th>Producto</th><th>Cantidad</th><th>Precio</th><th>Subtotal</th></tr>
            </thead>
            <tbody></tbody>
        </table>
        <h3>Total: <span id="total">0</span></h3>
        <div>
            <input id="efectivo" class="form-control" placeholder="Efectivo" />
            <input id="mercadoPago" class="form-control" placeholder="Mercado Pago" />
            <button id="finalizar" class="btn btn-success">Finalizar (F10)</button>
            <a asp-action="CerrarTurno" asp-route-turnoId="@ViewBag.TurnoId" class="btn btn-danger">Cerrar Turno</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let total = 0;
        $("#codigo").on("keypress", function(e) {
            if (e.which === 13) {
                $.post("/Pos/AgregarProducto", {
                    codigo: $(this).val(),
                    sucursalId: @ViewBag.SucursalId,
                    cajaId: @ViewBag.CajaId,
                    turnoId: @ViewBag.TurnoId
                }, function(data) {
                    if (data.success) {
                        $("#carrito tbody").append(`<tr><td>${data.item.descripcion}</td><td>${data.item.cantidad}</td><td>${data.item.precio}</td><td>${data.item.subtotal}</td></tr>`);
                        total += data.item.subtotal;
                        $("#total").text(total);
                    } else {
                        alert(data.message);
                    }
                    $("#codigo").val("").focus();
                });
            }
        });

        $("#finalizar").click(function() {
            $.post("/Pos/FinalizarVenta", {
                sucursalId: @ViewBag.SucursalId,
                cajaId: @ViewBag.CajaId,
                turnoId: @ViewBag.TurnoId,
                efectivo: $("#efectivo").val() || 0,
                mercadoPago: $("#mercadoPago").val() || 0
            }, function(data) {
                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert(data.message);
                }
            });
        });

        $(document).keydown(function(e) {
            if (e.key === "F10") {
                $("#finalizar").click();
                e.preventDefault();
            }
        });
    </script>
}