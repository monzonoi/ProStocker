@model ProStocker.Web.Models.ArticulosViewModel
@{
    ViewData["Title"] = "Artículos";
    Layout = "~/Views/Shared/DashboardShell.cshtml";
}
<h2>Artículos</h2>
<a asp-action="Create" class="btn btn-primary">Nuevo Artículo</a>
<table class="table">
    <thead>
        <tr>
            <th>Código</th>
            <th>Descripción</th>
            <th>Imagen</th>
            <th>Precio 1</th>
            <th>Precio 2</th>
            <th>Precio 3</th>
            <th>Costo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Articulos)
        {
            <tr>
                <td>@item.Codigo</td>
                <td>@item.Descripcion</td>
                <td>@(item.Imagen ?? "Sin imagen")</td>
                <td>@item.Precio1</td>
                <td>@(item.Precio2.HasValue ? item.Precio2.Value.ToString() : "-")</td>
                <td>@(item.Precio3.HasValue ? item.Precio3.Value.ToString() : "-")</td>
                <td>@item.Costo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>