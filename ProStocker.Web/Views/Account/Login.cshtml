@model ProStocker.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}
<h2>Iniciar Sesión</h2>
<form asp-action="Login" method="post">
    <div class="form-group">
        <label>Usuario</label>
        <input asp-for="UsuarioNombre" class="form-control" />
        <span asp-validation-for="UsuarioNombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Contraseña</label>
        <input asp-for="Contrasena" type="password" class="form-control" />
        <span asp-validation-for="Contrasena" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger">@Html.ValidationSummary()</div>
    }
</form>