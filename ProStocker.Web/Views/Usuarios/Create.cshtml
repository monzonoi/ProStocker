<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input type="text" name="Nombre" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Usuario</label>
        <input type="text" name="UsuarioNombre" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Contraseña</label>
        <input type="password" name="Contrasena" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Tipo</label>
        <select name="Tipo" class="form-select">
            <option value="Admin">Admin</option>
            <option value="Usuario" selected>Usuario</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Sucursales</label>
        <select name="Sucursales" class="form-select" multiple>
            @foreach (var sucursal in ViewBag.Sucursales ?? new List<Sucursal>())
            {
                <option value="@sucursal.Id">@sucursal.Nombre</option>
            }
        </select>
    </div>
</form>